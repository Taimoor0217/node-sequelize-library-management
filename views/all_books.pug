extends layout.pug
block content
  h1 Books
  p
    a.button(href='new_book.html') Create New Book
  table
    thead
      tr
        th Title
        th Author
        th Genre
        th Year
    tbody
      each Book, index in books
        tr
          td
            a(href=`books/${Book.id}`) #{Book.title}
          td #{Book.author}
          td #{Book.genre}
          td #{Book.year}
